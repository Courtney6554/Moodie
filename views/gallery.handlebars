   <div class="container">
    <div id="main_area">
       
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12" id="slider-header">
            <div class="btn-group btn-group-justified" role="group" aria-label="...">
              <div class="btn-group" role="group">
              <a href="/gallery/sadness" role="button" class="btn btn-default" id="sadness"><span class="sadness"></span>Sadness</a>
              </div>
              <div class="btn-group" role="group">
                <a href="/gallery/neutral" role="button" class="btn btn-default" id="neutral"><span class="neutral"></span>Neutral</a>
              </div>
              <div class="btn-group" role="group">
                <a href="/gallery/disgust" role="button" class="btn btn-default" id="disgust"><span class="disgust"></span>Disgust</a>
              </div>
              <div class="btn-group" role="group">
                <a href="/gallery/anger" role="button" class="btn btn-default" id="anger"><span class="anger"></span>Anger</a>
              </div>
              <div class="btn-group" role="group">
                <a href="/gallery/surprise" role="button" class="btn btn-default" id="surprise"><span class="surprise"></span>Surprise</a>
              </div>
              <div class="btn-group" role="group">
                <a href="/gallery/fear" role="button" class="btn btn-default" id="fear"><span class="fear"></span>Fear</a>
              </div>
              <div class="btn-group" role="group">
                <a href="/gallery/happiness" role="button" class="btn btn-default" id="happiness"><span class="happiness"></span>Happiness</a>
              </div>
            </div>
            
            </div>
        </div>
        <br><br><br>
        <!-- Slider -->
        <div class="row">
            <div class="col-sm-6" id="slider-thumbs">
                <!-- Bottom switcher of slider -->
                <ul class="hide-bullets">
                    {{#each photos}}
                        <li class="col-sm-3">
                            <a class="thumbnail" id="carousel-selector-{{@index}}"><img src="{{this.url}}"></a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            <div class="col-sm-6">
                <div class="col-xs-12" id="slider">
                    <!-- Top part of the slider -->
                    <div class="row">
                        <div class="col-sm-12" id="carousel-bounding-box">
                            <div class="carousel slide" id="myCarousel">
                                <!-- Carousel items -->
                                <div class="carousel-inner">
                                    {{#each photos}}
                                        <div class="{{#if @first}}active {{/if}}item" data-slide-number="{{@index}}">
                                            <img src="{{this.url}}"><div class="img-title">{{this.score}}% {{this.emotion}}</div>
                                        </div>
                                    {{/each}}
                                </div>
                                <!-- Carousel nav -->
                                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

